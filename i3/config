# i3 Config
set $mod Mod4
set $terminal alacritty
set $config $XDG_CONFIG_HOME/i3

# Font
font pango:Hack Nerd Font 10

# OneDark
set $black        #282c34
set $white        #abb2bf
set $lightRed     #e06c75
set $darkRed      #be5046
set $green        #98c379
set $lightYellow  #e5c07b
set $darkYellow   #d19a66
set $blue         #61afef
set $magenta      #c678dd
set $cyan         #56b6c2
set $gutterGrey   #4b5263
set $commentGrey  #5c6370

# Common
include $config/boarders
include $config/workspaces
include $config/keymaps

# Hosts
include $config/`hostname`/wallpaper
include $config/`hostname`/lockscreen
include $config/`hostname`/bar
include $config/`hostname`/startup
