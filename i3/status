# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  interval = 2
  color_good = "#98c379"
  color_degraded = "#c678dd"
  color_bad = "#be5046"
}

order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "read_file BRIGHTNESS"
order += "battery all"
order += "tztime local"

cpu_temperature 0 {
  format = " %degrees°C"
  max_threshold = 75
  format_above_threshold = " %degrees °C"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
  separator = false
}

cpu_usage {
  format = " %usage"
  max_threshold = 90
  format_above_threshold = "%usage"
  degraded_threshold = 50
  format_above_degraded_threshold = "%usage"
  separator = false
}

wireless _first_ {
  format_up = " %essid %ip"
  format_down = "睊"
  separator = false
}

ethernet _first_ {
  format_up = " %ip (%speed)"
  format_down = ""
  separator = false
}

battery all {
  format = "%status %remaining"
  format_down = ""
  status_chr = "ﮣ"
  status_bat = ""
  status_unk = ""
  status_full = ""
  low_threshold = 30
  threshold_type = "time"
  path = "/sys/class/power_supply/BAT%d/uevent"
  separator = false
}


disk "/" {
  format = " %avail"
  prefix_type = "custom"
  low_threshold = 10
  format_below_threshold = "Warning: %avail"
  threshold_type = "gbytes_avail"
  separator = false
}

load {
  format = "%1min"
}

memory {
  format = " %used/%total"
  threshold_degraded = "30%"
  threshold_critical = "10%"
  format_degraded = "Mem %used of %total"
  separator = false
}

tztime local {
  format = " %Y-%m-%d %H:%M"
  separator = false
}

volume master {
  format = " %volume"
  format_muted = ""
  separator = false
}


read_file BRIGHTNESS {
  format = " %content"
  path = "/sys/class/backlight/intel_backlight/brightness"
  max_characters = 4
  separator = false
}
